{{ 'dip-it.css' | asset_url | stylesheet_tag }}
<script src="{{ 'dip-it.js' | asset_url }}" defer="defer"></script>
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.4 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.4 | round: 0 }}px;
  }

  .section-{{ section.id }} {
    margin-top: {{ section.settings.margin_top | times: 0.4 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.4 | round: 0 }}px;
  }
  .section-{{ section.id }} .btn.btn-primary {
     color: {{ section.settings.btn_text_color }};
     background-color: {{ section.settings.btn_bg_color }};
     border-color: {{ section.settings.btn_border_color }};
   }

   .section-{{ section.id }} .btn.btn-primary:hover {
     background-color: {{ section.settings.btn_hover_bg_color }};
     border-color: {{ section.settings.btn_hover_bg_color }};
     color: {{ section.settings.btn_text_color_hover }};
   }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    .section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top}}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}

<section
  class="section-{{ section.id }} dip-it gradient color-{{ section.settings.section_color_scheme }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
  style="background-color: {{ section.settings.background_color }};"
>
  <div class="page-width section-{{ section.id }}-padding">
    <div class="dip-it-wrapper">
      <div class="row">
        <div class="col-md-6">
          {%- for block in section.blocks -%}
            <div class="hover-toggle-wrapper">
              <h2
                class="hover-heading"
                style="--hover-img: url('{{ block.settings.image | image_url: width: 145 }}'); --hover-right: {{ block.settings.image_position_right }}; --hover-top: {{ block.settings.image_position_top }};"
                data-content-img="{{ block.settings.content_image | image_url: width: 700 }}"
                data-caption="{{ block.settings.content_caption | default: '' }}"
                data-desc="{{ block.settings.content_desc | escape | default: '' }}"
              >
                {{ block.settings.heading }}
              </h2>

              {% if block.settings.mobile_default_image != blank %}
                <div class="mobile-badge-wrapper">
                  <img
                    src="{{ block.settings.mobile_default_image | image_url: width: 120 }}"
                    alt="badge default"
                    class="badge-mobile default-img img-fluid"
                    data-click-img="{{ block.settings.mobile_clicked_image | image_url: width: 120 }}"
                  >
                </div>
              {% endif %}
            </div>
          {%- endfor -%}
        </div>

        <div class="col-md-6">
          <div class="dip-it-col-wrapper text-start" id="dipContentBox">
            <img
              id="dipImage"
              src="{{ section.blocks[0].settings.content_image | image_url: width: 700 }}"
              class="img-fluid"
              alt=""
            >
            <h7 class="PRINTF-Regular" id="dipCaption">{{ section.blocks[0].settings.content_caption }}</h7>
            <div class="desc">
              <p id="dipDesc"></p>
            </div>
          </div>
        </div>
      </div>
      <div class="text-center">
        <a class="btn btn-primary" href="{{ section.settings.btn-url }}">
          {{- section.settings['btn-label'] -}}
        </a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Dip It",
  "settings": [
    {
      "type": "color_scheme",
      "id": "section_color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "url",
      "id": "btn-url",
      "label": "Button URL"
    },
    {
      "type": "text",
      "id": "btn-label",
      "label": "Button Label"
    },
    {
      "type": "color",
      "id": "btn_text_color",
      "label": "Button Text Color"
    },
    {
      "type": "color",
      "id": "btn_bg_color",
      "label": "Button Background Color"
    },
    {
      "type": "color",
      "id": "btn_border_color",
      "label": "Button Border Color"
    },
    {
      "type": "color",
      "id": "btn_hover_bg_color",
      "label": "Button Hover Background Color"
    },
    {
      "type": "color",
      "id": "btn_text_color_hover",
      "label": "Button Text Color Hover"
    },
    {
      "type": "header",
      "content": "Section Margin And Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 24
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Margin top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Margin bottom",
      "default": 0
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "transparent"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Heading",
      "settings": [
        {
          "type": "html",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Hover Image"
        },
        {
          "type": "text",
          "id": "image_position_right",
          "label": "Image Right Position (e.g., -45%)",
          "default": "-45%"
        },
        {
          "type": "text",
          "id": "image_position_top",
          "label": "Image Right Position (e.g., -45%)",
          "default": "-20px"
        },
        {
          "type": "image_picker",
          "id": "content_image",
          "label": "Right Content Image"
        },
        {
          "type": "text",
          "id": "content_caption",
          "label": "Caption"
        },
        {
          "type": "richtext",
          "id": "content_desc",
          "label": "Description"
        },
        {
          "type": "image_picker",
          "id": "mobile_default_image",
          "label": "Mobile Default Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_clicked_image",
          "label": "Mobile Click Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Dip It"
    }
  ]
}
{% endschema %}
