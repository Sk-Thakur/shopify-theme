{{ 'marquee-bar.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.4 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.4 | round: 0 }}px;
  }

  .section-{{ section.id }} {
    margin-top: {{ section.settings.margin_top | times: 0.4 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.4 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    .section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top}}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }

  .section-{{ section.id }} .marquee-track {
    animation-duration: {{ section.settings.scroll_speed }}s;
  }
{%- endstyle -%}

<section
  class="section-{{ section.id }} marquee-section {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
  style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }}; font-size: {{ section.settings.font_size }}px;"
>
  <div class="section-{{ section.id }}-padding">
    <div class="marquee">
      <div class="marquee-track">
        {% for block in section.blocks %}
          <div class="marquee-item">
            {% if block.settings.icon != blank %}
              <img class="img-fluid" src="{{ block.settings.icon | image_url: width: 55 }}" alt="icon">
            {% endif %}
            {{ block.settings.text }}
          </div>
        {% endfor %}
        {% for block in section.blocks %}
          <div class="marquee-item">
            {% if block.settings.icon != blank %}
              <img class="img-fluid" src="{{ block.settings.icon | image_url: width: 55 }}" alt="icon">
            {% endif %}
            {{ block.settings.text }}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Scrolling Text Bar",
  "tag": "section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#2e7d32"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size (px)",
      "min": 12,
      "step": 2,
      "max": 136,
      "default": 18
    },
    {
      "type": "header",
      "content": "Section Margin And Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 24
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Margin top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Margin bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "scroll_speed",
      "label": "Scroll Speed (Seconds per Loop)",
      "min": 5,
      "max": 60,
      "step": 1,
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "text_image_block",
      "name": "Text or Image",
      "settings": [
        {
          "type": "html",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Optional Image (e.g. cactus)"
        }
      ]
    }
  ],
  "max_blocks": 30,
  "presets": [
    {
      "name": "Scrolling Marquee",
      "blocks": [
        {
          "type": "text_image_block",
          "settings": {
            "text": "MEXICAN TRADITION"
          }
        },
        {
          "type": "text_image_block",
          "settings": {
            "icon": "shopify://shop_images/cactus-icon.png"
          }
        },
        {
          "type": "text_image_block",
          "settings": {
            "text": "ENDLESS POSSIBILITIES"
          }
        }
      ]
    }
  ]
}
{% endschema %}
