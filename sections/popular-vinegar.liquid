{{ 'popular-vinegar.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.4 | round: 0 }}rem;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.4 | round: 0 }}px;
  }

  .section-{{ section.id }} {
    margin-top: {{ section.settings.margin_top | times: 0.4 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.4 | round: 0 }}rem;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}rem;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    .section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top}}rem;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}

<section
  class="section-{{ section.id }} popular-vinegar gradient color-{{ section.settings.section_color_scheme }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
  style="background-color: {{ section.settings.background_color }};"
>
  <div class="page-width section-{{ section.id }}-padding">
    <div class="popular-vinegar-wrapper">
      <div class="popular-vinegar-wrapper-top">
        <div class="position-relative text-center">
          <h2>{{ section.settings.heading }}</h2>
          <div class="position-absolute">
            {% if section.settings['image'] %}
              {{ section.settings.image | image_url: width: 110 | image_tag: class: 'img-fluid' }}
            {% endif %}
          </div>
        </div>
      </div>
      <div class="popular-vinegar-wrapper-bottom">
        <div class="row align-items-end">
          <div class="col-md-7">
            <div class="popular-vinegar-media text-{{ section.settings.image_alignment }}">
              <div>
                {% if section.settings['col-image'] %}
                  {% assign img_style = 'width:' | append: section.settings.image_width | append: 'px;' %}
                  {{
                    section.settings['col-image']
                    | image_url: width: section.settings.image_width
                    | image_tag: class: 'img-fluid', style: img_style
                  }}
                {% endif %}
              </div>
            </div>
          </div>
          <div class="col-md-5">
            <h7 class="PRINTF-Regular">{{ section.settings.caption }}</h7>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Popular Vinegar",
  "settings": [
    {
      "type": "color_scheme",
      "id": "section_color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "html",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "col-image",
      "label": "Column Image"
    },
    {
      "type": "range",
      "id": "image_width",
      "label": "Image width (in pixels)",
      "min": 100,
      "max": 1200,
      "step": 20,
      "default": 600
    },
    {
      "type": "html",
      "id": "caption",
      "label": "Column Heading"
    },
    {
      "type": "select",
      "id": "image_alignment",
      "label": "Image alignment",
      "default": "start",
      "options": [
        { "value": "start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "end", "label": "Right" }
      ]
    },
    {
      "type": "header",
      "content": "Section Margin And Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 2,
      "unit": "rem",
      "label": "t:sections.all.padding.padding_top",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 24
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": -50,
      "max": 120,
      "step": 10,
      "unit": "rem",
      "label": "Margin top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Margin bottom",
      "default": 0
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "transparent"
    }
  ],
  "presets": [
    {
      "name": "Popular Vinegar"
    }
  ]
}
{% endschema %}
