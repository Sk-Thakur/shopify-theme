{{ 'multiple-collections.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

{%- unless section.settings.quick_add == 'none' -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endunless -%}

{%- if section.settings.quick_add == 'standard' -%}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- if section.settings.quick_add == 'bulk' -%}
  <script src="{{ 'quick-add-bulk.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quantity-popover.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'price-per-item.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quick-order-list.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.4 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.4 | round: 0 }}px;
  }

  .section-{{ section.id }} {
    margin-top: {{ section.settings.margin_top | times: 0.4 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.4 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    .section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top}}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}

<section
  class="multiple-collections section-{{ section.id }}"
  style="background-color: {{ section.settings.background_color }};"
>
  <div class="multiple-collections-wrapper">
    <div class="multiple-collections-top">
      <div class="page-width">
        <div class="row align-items-center">
          <div class="col-md-4">
            <div class="custom-multirow-media text-{{ section.settings.left_image_alignment }}">
              <div>
                {% if section.settings['left-image'] %}
                  {% assign img_style = 'width:' | append: section.settings.left_image_width | append: 'px;' %}
                  {{
                    section.settings['left-image']
                    | image_url: width: section.settings['left-image_width']
                    | image_tag: class: 'img-fluid', style: img_style
                  }}
                {% endif %}
              </div>
            </div>
            <div class="mobile-view">
              <div class="custom-multirow-media text-{{ section.settings.right_image_alignment }}">
                <div>
                  {% if section.settings['right-image'] %}
                    {% assign img_style = 'width:' | append: section.settings.right_image_width | append: 'px;' %}
                    {{
                      section.settings['right-image']
                      | image_url: width: section.settings['right-image_width']
                      | image_tag: class: 'img-fluid', style: img_style
                    }}
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="section-title text-center">
              <h1 class="h1">{{ section.settings.heading }}</h1>
            </div>
            <div class="just-tabs">
              {% for block in section.blocks %}
                <button
                  class="tablink {% if forloop.first %}active{% endif %} block-btn-{{ block.id }}"
                  onclick="openPage('Collection-{{ forloop.index }}')"
                  {% if forloop.first %}
                    id="defaultOpen"
                  {% endif %}
                >
                  {{ block.settings.ttl_txt }}
                </button>
                <style>
                  {%- for block in section.blocks -%}
                    .section-{{ section.id }} .block-btn-{{ block.id }} { color: {{ block.settings.btn_text_color }};
                    background-color: {{ block.settings.btn_bg_color }}; border-color: {{ block.settings.btn_border_color }};
                    transition: all 0.3s ease; border-style: solid; }

                    .section-{{ section.id }} .block-btn-{{ block.id }}:hover { background-color:
                    {{ block.settings.btn_hover_bg_color }}; border-color: {{ block.settings.btn_hover_bg_color }}; color:
                    {{ block.settings.btn_text_color_hover }}; }

                    .section-{{ section.id }} .tablink.active.block-btn-{{ block.id }}{
                      background-color:
                    {{ block.settings.btn_hover_bg_color }}; border-color: {{ block.settings.btn_hover_bg_color }};
                    }
                  {%- endfor -%}
                </style>
              {% endfor %}
            </div>
          </div>
          <div class="desktop-view">
            <div class="col-md-4">
              <div class="custom-multirow-media text-{{ section.settings.right_image_alignment }}">
                <div>
                  {% if section.settings['right-image'] %}
                    {% assign img_style = 'width:' | append: section.settings.right_image_width | append: 'px;' %}
                    {{
                      section.settings['right-image']
                      | image_url: width: section.settings['right-image_width']
                      | image_tag: class: 'img-fluid', style: img_style
                    }}
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="multiple-collections-bottom">
      <div class="page-width section-{{ section.id }}-padding">
        <div
          class="collection{% if section.settings.quick_add == 'bulk' %} collection-quick-add-bulk{% endif %}{% if section.settings.full_width %} collection--full-width{% endif %}"
          id="collection-{{ section.id }}"
          data-id="{{ section.id }}"
        >
          <div class="collection-lists">
            {% for block in section.blocks %}
              <div id="Collection-{{ forloop.index }}" class="tabcontent">
                {% assign collection = block.settings.col_name %}

                {% if collection and collection.products_count > 0 %}
                  <div class="row swiper_{{ forloop.index }}">
                    {% for product in collection.products limit: 10 %}
                      <div class="col-md-4 first-slider {% if forloop.first %}active{% endif %}">
                        <div class="popular-slider-card">
                          <div class="highlight-grid" data-limit="4">
                            <div class="prod-img">
                              {% render 'card-product',
                                card_product: product,
                                media_aspect_ratio: section.settings.image_ratio,
                                image_shape: section.settings.image_shape,
                                show_secondary_image: section.settings.show_secondary_image,
                                show_vendor: section.settings.show_vendor,
                                show_desc: section.settings.show_desc,
                                show_rating: section.settings.show_rating,
                                skip_styles: skip_card_product_styles,
                                section_id: section.id,
                                quick_add: section.settings.quick_add
                              %}
                            </div>
                          </div>
                        </div>
                      </div>
                    {% endfor %}
                  </div>
                {% else %}
                  <div class="coming-soon-wrapper">
                    {% if block.settings.coming_soon_image != blank %}
                      <div class="coming-soon-image-wrapper">
                        <img
                          class="img-fluid"
                          loading="lazy"
                          height=""
                          width=""
                          alt="Coming Soon"
                          src="{{ block.settings.coming_soon_image | img_url: "master" }}"
                        >
                        <div class="coming-soon-overlay">
                          {{ block.settings.coming_soon_text | default: 'Coming Soon' }}
                        </div>
                      </div>
                    {% else %}
                      <p style="text-align:center; font-size: 1.2rem;">Coming Soon</p>
                    {% endif %}
                  </div>
                {% endif %}
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

