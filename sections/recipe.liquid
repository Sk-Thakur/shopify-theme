{{ 'recipe.css' | asset_url | stylesheet_tag }}
<script src="{{ 'recipe.js' | asset_url }}" defer="defer"></script>
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.4 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.4 | round: 0 }}px;
  }

  .section-{{ section.id }} {
    margin-top: {{ section.settings.margin_top | times: 0.4 | round: 0 }}rem;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.4 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    .section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top }}rem;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }

  /* ðŸ‘‡ Custom margin-top for screen width between 1200px and 1440px */
  @media screen and (min-width: 1200px) and (max-width: 1440px) {
    .section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top | plus: 5 }}rem;
    }
  }
{%- endstyle -%}

<section
  class="section-{{ section.id }} recipe-slider gradient color-{{ section.settings.section_color_scheme }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
  style="background-color: {{ section.settings.background_color }};"
>
  <div class="page-width section-{{ section.id }}-padding">
    <div class="recipe-slider-wrapper">
      <div class="recipe-slider-top">
        <div class="row justify-content-between">
          <div class="col-md-9">
            <h2>{{ section.settings.heading }}</h2>
          </div>
          <div class="col-md-3">
            <div class="recipe-slider-arrows"></div>
          </div>
        </div>
      </div>
      <div class="recipe-slider-main">
        {%- for block in section.blocks -%}
          <div class="recipe-slider-card">
            <div class="row align-items-{{ block.settings.align_items }} {% if block.settings.reverse_layout %}reverse{% endif %}">
              <div class="col-md-6">
                <div class="custom-multirow-col-wrapper text-{{ block.settings.text_alignment }}">
                  {%- if block.settings.caption -%}
                    <h7 class="PRINTF-Regular">{{ block.settings.caption }}</h7>
                  {%- endif -%}
                  {%- if block.settings.heading -%}
                    <h2 class="image-with-text__heading">
                      {{ block.settings.heading }}
                    </h2>
                  {%- endif -%}
                  <div class="desktop-view">
                    {%- if block.settings.text -%}
                      <div class="image-with-text__text">
                        <p>{{ block.settings.text }}</p>
                      </div>
                    {%- endif -%}
                  </div>
                  {%- if block.settings.button_label != blank -%}
                    <a
                      {% if block.settings.button_link == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.button_link }}"
                      {% endif %}
                      class="btn btn-primary block-btn-{{ block.id }}"
                    >
                      {{ block.settings.button_label | escape }}
                    </a>
                  {%- endif -%}
                </div>
              </div>
              <div class="col-md-6">
                <div class="custom-multirow-media text-{{ block.settings.image_alignment }}">
                  <div>
                    {% if block.settings.image %}
                      {% assign desktop_img_url = block.settings.image | image_url: width: block.settings.image_width %}
                      {% assign mobile_img_url = block.settings.mobile_image
                        | image_url: width: block.settings.image_width
                      %}
                      {% assign img_style = 'width:' | append: block.settings.image_width | append: 'px;' %}

                      <picture>
                        {% if block.settings.mobile_image %}
                          <source media="(max-width: 749px)" srcset="{{ mobile_img_url }}">
                        {% endif %}
                        <img
                          src="{{ desktop_img_url }}"
                          class="img-fluid"
                          style="{{ img_style }}"
                          alt="{{ block.settings.image.alt | default: '' }}"
                        >
                      </picture>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
      <style>
        {%- for block in section.blocks -%}
          .section-{{ section.id }} .block-btn-{{ block.id }} { color: {{ block.settings.btn_text_color }};
          background-color: {{ block.settings.btn_bg_color }}; border-color: {{ block.settings.btn_border_color }};
          transition: all 0.3s ease; }

          .section-{{ section.id }} .block-btn-{{ block.id }}:hover { background-color:
          {{ block.settings.btn_hover_bg_color }}; border-color: {{ block.settings.btn_hover_bg_color }}; color:
          {{ block.settings.btn_text_color_hover }}; }
        {%- endfor -%}
      </style>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Recipe Book",
  "settings": [
    {
      "type": "color_scheme",
      "id": "section_color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "html",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "header",
      "content": "Section Margin And Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 24
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": -80,
      "max": 120,
      "step": 4,
      "unit": "rem",
      "label": "Margin top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Margin bottom",
      "default": 0
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "transparent"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "slide",
      "settings": [
        {
          "type": "checkbox",
          "id": "reverse_layout",
          "label": "Reverse column order (image on left)",
          "default": false
        },
        {
          "type": "select",
          "id": "align_items",
          "label": "Align Items",
          "default": "center",
          "options": [
            { "label": "Top", "value": "start" },
            { "label": "Center", "value": "center" },
            { "label": "Bottom", "value": "end" }
          ]
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.multirow.blocks.row.settings.image.label"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image"
        },
        {
          "type": "range",
          "id": "image_width",
          "label": "Image width (in pixels)",
          "min": 100,
          "max": 1200,
          "step": 20,
          "default": 600
        },
        {
          "type": "select",
          "id": "image_alignment",
          "label": "Image alignment",
          "default": "start",
          "options": [
            { "value": "start", "label": "Left" },
            { "value": "center", "label": "Center" },
            { "value": "end", "label": "Right" }
          ]
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Text alignment",
          "default": "start",
          "options": [
            { "value": "start", "label": "Left" },
            { "value": "center", "label": "Center" },
            { "value": "end", "label": "Right" }
          ]
        },
        {
          "type": "html",
          "id": "caption",
          "default": "marinate IT",
          "label": "Caption"
        },
        {
          "type": "html",
          "id": "heading",
          "default": "t:sections.multirow.blocks.row.settings.heading.default",
          "label": "t:sections.multirow.blocks.row.settings.heading.label"
        },
        {
          "type": "html",
          "id": "text",
          "default": "t:sections.multirow.blocks.row.settings.text.default",
          "label": "t:sections.multirow.blocks.row.settings.text.label"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "t:sections.multirow.blocks.row.settings.button_label.default",
          "label": "t:sections.multirow.blocks.row.settings.button_label.label",
          "info": "t:sections.multirow.blocks.row.settings.button_label.info"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "t:sections.multirow.blocks.row.settings.button_link.label"
        },
        {
          "type": "color",
          "id": "btn_text_color",
          "label": "Button Text Color"
        },
        {
          "type": "color",
          "id": "btn_bg_color",
          "label": "Button Background Color"
        },
        {
          "type": "color",
          "id": "btn_border_color",
          "label": "Button Border Color"
        },
        {
          "type": "color",
          "id": "btn_hover_bg_color",
          "label": "Button Hover Background Color"
        },
        {
          "type": "color",
          "id": "btn_text_color_hover",
          "label": "Button Text Color Hover"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Recipe Book"
    }
  ]
}
{% endschema %}
