{{ 'product-image-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.4 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.4 | round: 0 }}px;
  }

  .section-{{ section.id }} {
    margin-top: {{ section.settings.margin_top | times: 0.4 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.4 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    .section-{{ section.id }} {
      margin-top: {{ section.settings.margin_top}}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}

<section
  class="product-image-text section-{{ section.id }} gradient  {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
  style="background-color: {{ section.settings.background_color }};"
>
  <div class="page-width section-{{ section.id }}-padding">
    <div class="product-image-text-wrapper">
      <div class="custom-multirow-media text-{{ section.settings.image_alignment }}">
        <h2>{{ section.settings.heading }}</h2>
        <div>
          {% if section.settings.image %}
            {% assign img_style = 'width:' | append: section.settings.image_width | append: 'px;' %}
            {{
              section.settings.image
              | image_url: width: section.settings.image_width
              | image_tag: class: 'img-fluid desktop-image', style: img_style
            }}
          {% endif %}

          {% if section.settings.mobile_image %}
            {{ section.settings.mobile_image | image_url: width: 600 | image_tag: class: 'img-fluid mobile-image' }}
          {% endif %}
        </div>
        <h7 class="PRINTF-Regular">{{ section.settings.caption }}</h7>
        <div class="mobile-view">
          <h8 class="PRINTF-Regular">{{ section.settings.mobile-caption }}</h8>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product Image Text",
  "settings": [
    {
      "type": "html",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "html",
      "id": "caption",
      "label": "Caption"
    },
    {
      "type": "html",
      "id": "mobile-caption",
      "label": "Mobile Caption"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    },
    {
      "type": "range",
      "id": "image_width",
      "label": "Image width (in pixels)",
      "min": 100,
      "max": 1600,
      "step": 20,
      "default": 600
    },
    {
      "type": "select",
      "id": "image_alignment",
      "label": "Image alignment",
      "default": "start",
      "options": [
        {
          "value": "start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "end",
          "label": "Right"
        }
      ]
    },
    {
      "type": "header",
      "content": "Section Margin And Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 24
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Margin top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Margin bottom",
      "default": 0
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "transparent"
    }
  ],
  "presets": [
    {
      "name": "Product Image Text"
    }
  ]
}
{% endschema %}
